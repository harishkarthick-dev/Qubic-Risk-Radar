# Database
POSTGRES_PASSWORD=your_secure_password_here

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long_please

# SMTP Email (for user verification emails)
# Gmail example: smtp.gmail.com:587, need App Password from Google Account settings
# Outlook example: smtp-mail.outlook.com:587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=noreply@qubicradar.io
SMTP_FROM_NAME=Qubic Risk Radar

# Frontend URL (for email verification links)
# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Trial Configuration
PRO_TRIAL_DAYS=30

# Pricing Control
# true = Users get 30-day Pro trial, then need to pay
# false = ALL users get unlimited Pro for free (no trial, no payment)
PRICING_ENABLED=true

# Discord Bot (for notifications)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Telegram Bot (for notifications)  
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Gemini AI (for intelligent detection)
GEMINI_API_KEY=your_google_ai_api_key
GEMINI_MODEL=gemini-1.5-pro
AI_DETECTION_ENABLED=true_here

# Security
WEBHOOK_SECRET=your_easyconnect_webhook_secret
JWT_SECRET=your_jwt_secret_key_minimum_32_chars

# Discord Webhooks (Get from Discord Server Settings → Integrations → Webhooks)
DISCORD_WEBHOOK_URL_CRITICAL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
DISCORD_WEBHOOK_URL_WARNING=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
DISCORD_WEBHOOK_URL_INFO=

# Telegram (Get from @BotFather)
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=-1001234567890

# SendGrid (Get from https://sendgrid.com/settings/api_keys)
SENDGRID_API_KEY=SG.your_api_key_here
SENDGRID_FROM_EMAIL=noreply@qubicradar.io
ALERT_EMAIL_RECIPIENTS=alerts@example.com,ops@example.com

# Qubic RPC
QUBIC_RPC_URL=https://rpc.qubic.org
